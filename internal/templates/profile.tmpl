{{ define "profile" }}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Profile</title>
    <!-- Bootstrap core CSS -->
    <link href="/static/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/static/vendor/css/profile.css" rel="stylesheet">
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">Library</a>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1 class="mt-5">Profile</h1>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Username: {{ .Client.Username }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Email: {{ .Client.Email }}</h6>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-lg-6">
                <h2>Books</h2>
                {{ if .Books }}
                <div class="list-group">
                    {{ range .Books }}
                    <a href="/books/{{ .ID }}" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">{{ .Title }}</h5>
                            <small><a href="/authors/{{ .AuthorID }}">{{ .Author }}</a></small>
                        </div>
                        <img src="{{ .ImageURL }}" alt="{{ .Title }}" class="img-thumbnail">
                    </a>
                    {{ end }}
                </div>
                {{ else }}
                <p>No books found</p>
                {{ end }}
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="/static/vendor/jquery/jquery.min.js"></script>
    <script src="/static/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>
{{ end }}
